= form_tag(likes_path, :id => "new_like_on_#{post_id}", :class => 'new_like', :remote => true) do
  = hidden_field_tag :post_id, post_id, :id => "post_id_on_#{post_id}", :text => "likes this"
  .hidden
    .submit_button
      = submit_tag 'like', :id => "like_submit_#{post_id}", :class => "show_post_comments"
= link_to 'like', "", :id => "new_like_link"
