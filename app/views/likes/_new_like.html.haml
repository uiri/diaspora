= form_tag( likes_path, :id => "new_like_on_#{post_id}", :class => 'new_like', :remote => true) do
  %p
    = label_tag "like_text_on_#{post_id}", t('.like')
    = text_area_tag :text, nil, :rows => 0, :class => "like_box",:id => "like_text_on_#{post_id}"
  = hidden_field_tag :post_id,  post_id, :id => "post_id_on_#{post_id}"
  .submit_button
    = submit_tag :id => "like_submit_#{post_id}", :class => "like_submit button"
