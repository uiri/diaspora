- comment = hash[:comment]
- person = hash[:person]
%li.comment{:data=>{:guid=>comment.id}, :class => ("hidden" if(defined? hidden))}
  =person_image_link(person)
  .content
    .from
      =person_link(person)
    -if like.text == 'dislike'
      = markdownify(t('.like'))
    -else
      = markdownify(t('.dislike'))
