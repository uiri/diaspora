- like = hash[:like]
- person = hash[:person]
%li.comment{:data=>{:guid=>like.id}, :class => ("hidden" if(defined? hidden))}
  .content
    .from
      =person_link(person)
    -if like.text == 'dislikes this'
      = markdownify(t('.dislike'))
    -else
      = markdownify(t('.like'))
